# ChainSync Universal Commerce - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Push Chain Configuration
PUSH_CHAIN_RPC_URL=https://rpc.push.org
PUSH_CHAIN_PRIVATE_KEY=your_push_chain_private_key_here
PUSH_CHAIN_CONTRACT_ADDRESS=your_contract_address_here

# PushPay Bot Integration
TELEGRAM_BOT_URL=https://t.me/PushPayCryptoBot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/chainsync
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Social Media Integration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Analytics & Monitoring
ANALYTICS_API_KEY=your_analytics_api_key
SENTRY_DSN=your_sentry_dsn_here

# Project G.U.D Specific
PROJECT_NAME=ChainSync
PROJECT_DESCRIPTION=Universal Social Commerce Platform
TEAM_NAME=ChainSync Team
GITHUB_REPO=https://github.com/your-repo/chainsync

# Feature Flags
ENABLE_SOCIAL_FEATURES=true
ENABLE_CROSS_CHAIN_PAYMENTS=true
ENABLE_BOT_INTEGRATION=true
ENABLE_ANALYTICS=true